<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightest_gray">

    <in.srain.cube.views.ptr.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ptrframelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <com.dreamnote.widget.gradation.GradationScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/personal_head"
                    android:scaleType="fitXY"
                    android:src="@drawable/shade" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#dfdfdf" />

                <LinearLayout
                    android:id="@+id/personal_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/personal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom|center_vertical"
                            android:text="小土豆"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="200dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="top|center_vertical"
                            android:lines="1"
                            android:paddingTop="3dp"
                            android:singleLine="true"
                            android:text="你是谁？你从哪里来？你到哪里去？你是谁？你从哪里来？你到哪里去？"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf" />

                <com.dreamnote.widget.gradation.NoScrollListview
                    android:id="@+id/recycler_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="56dp"></com.dreamnote.widget.gradation.NoScrollListview>

            </LinearLayout>

        </com.dreamnote.widget.gradation.GradationScrollView>

    </in.srain.cube.views.ptr.PtrFrameLayout>

    <LinearLayout
        android:id="@+id/personal_llout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personal_name_img"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.2"
            android:gravity="right"
            android:src="@drawable/personal"
            app:border_color="@color/white"
            app:border_width="1dp" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:text="我的动态"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/personal_setting_img"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:src="@drawable/ic_settings_white_24dp" />

    </LinearLayout>

    <View
        android:id="@+id/personal_widget_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/personal_llout"
        android:background="@color/transparent" />

</RelativeLayout>
